# $buy_item
!! call this to actually buy an item from a store

count = ARGS[0]
$item = $ARGS[1]
price = ARGS[2]
$variable_name = $ARGS[3]
$location = $ARGS[4]

dynamic "set <<$variable_name>> += <<count>>"
set money -= price
$message = '<font color="green">You bought <<count>> <b><<$item>></b>.</font>'
gt $location, $message

--- $buy_item ----------
