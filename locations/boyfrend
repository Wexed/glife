# boyfrend
if $ARGS[0] = 'start':
	if bfA = 0 and stopboy = 0:
		stopboy = 1
		gs 'boyfrend', 'A'
	elseif bfA > 0 and bfB = 0 and stopboy = 0:
		stopboy = 1
		gs 'boyfrend', 'B'
	elseif bfA > 0 and bfB > 0 and bfC = 0 and stopboy = 0:
		stopboy = 1
		gs 'boyfrend', 'C'
	elseif bfA > 0 and bfB > 0 and bfC > 0 and stopboy = 0:
		'Hmm, you are already three boyfriend, why do you need a fourth?'
	end
end

if $ARGS[0] = 'A':
	!!stopboy = 0
	$boyA = $boy
	boybodyrandA = boybodyrand
	$boybodyA = $boybody
	boybodrandA = boybodrand
	$boybodA = $boybod
	boyfacerandA = boyfacerand
	$boyfaceA = $boyface
	dickA = dick
	silaVagA = silaVag
	financeA = finance
	vneshBoyA = vneshBoy
	$boyCloA = $boyClo
	figurBoyA = figurBoy
	titBoyA = titBoy
	haerBoyA = haerBoy
	harakBoyA = harakBoy
	boydayA = day
	bfA = 1
	daya = 0
	boyonceA = 0
	izvratA = izvrat
	giftDayA = 0
	giftNumA = 0
	love = 0
end

if $ARGS[0] = 'B':
	!!stopboy = 0
	$boyB = $boy
	boybodyrandB = boybodyrand
	$boybodyB = $boybody
	boybodrandB = boybodrand
	$boybodB = $boybod
	boyfacerandB = boyfacerand
	$boyfaceB = $boyface
	dickB = dick
	silaVagB = silaVag
	financeB = finance
	vneshBoyB = vneshBoy
	$boyCloB = $boyClo
	figurBoyB = figurBoy
	titBoyB = titBoy
	haerBoyB = haerBoy
	harakBoyB = harakBoy
	boydayB = day
	bfB = 1
	dayb = 0
	boyonceB = 0
end

if $ARGS[0] = 'C':
	!!stopboy = 0
	$boyC = $boy
	boybodyrandC = boybodyrand
	$boybodyC = $boybody
	boybodrandC = boybodrand
	$boybodC = $boybod
	boyfacerandC = boyfacerand
	$boyfaceC = $boyface
	dickC = dick
	silaVagC = silaVag
	financeC = finance
	vneshBoyC = vneshBoy
	$boyCloC = $boyClo
	figurBoyC = figurBoy
	titBoyC = titBoy
	haerBoyC = haerBoy
	harakBoyC = harakBoy
	boydayC = day
