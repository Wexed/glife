:markfightE2
koef = 85
koefE = 100
rMin -= 1
stoper += 1

if endur <= 0 or lustW <= 0:jump 'markSubLoss'
if endurE <= 0 or lustWE <= 0:jump 'markSubWin'

if stoper < 3:
	if rMin > 0:
		dynamic $uderdinE

		if Aktiv > Passiv:
